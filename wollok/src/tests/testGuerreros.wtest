import main.guerreros.*
import main.armas.*

describe "tests de gandalf" {

  test "el poder de gandalf con toda su vida y todas sus armas es 2800" {
    gandalf.agregarArma(baculo)
    gandalf.agregarArma(espada)
    gandalf.nivelDeVida(100)

    assert.equals(2800, gandalf.poderGuerrero())
  }

  test "el poder de gandalf con 80 de vida y sin armas es 1200" {
    gandalf.nivelDeVida(80)

    assert.equals(1200, gandalf.poderGuerrero())
  }

  test "el poder de gandalf con 5 de vida y su baculo de arma es 2300" {
    gandalf.agregarArma(baculo)
    gandalf.nivelDeVida(5)

    assert.equals(2300, gandalf.poderGuerrero())
  }

  test "el poder de gandalf con 30 de vida, todas sus armas y su origen enano es 1650" {
    gandalf.agregarArma(baculo)
    gandalf.agregarArma(espada)
    gandalf.nivelDeVida(30)
    gandalf.origen("enano")

    assert.equals(1650, gandalf.poderGuerrero())
  }

}